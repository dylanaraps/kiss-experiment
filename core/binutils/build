#!/bin/sh -e

machine=$(gcc -dumpmachine)

./configure \
    --prefix=/usr \
    --enable-targets=x86_64-pep \
    --disable-multilib \
    --disable-werror \
    --disable-nls \
    --with-mmap \
    --build="$machine" \
    --with-system-zlib

make
make DESTDIR="$1" install

# Remove all info files.
rm -rf "$1/usr/share/info"
