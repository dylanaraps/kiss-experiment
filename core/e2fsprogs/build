#!/bin/sh -e

./configure \
    --prefix=/usr \
    --enable-symlink-install \
    --disable-uuidd \
    --disable-libuuid \
    --disable-libblkid \
    --disable-elf-shlibs \
    --disable-fsck \
    --disable-nls

# MKDIR_P fixes an install issue on musl/busybox.
make
make MKDIR_P="install -d" DESTDIR="$1" install install-libs

# Remove all info files.
rm -rf "$1/usr/share/info"
