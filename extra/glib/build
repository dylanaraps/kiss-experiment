#!/bin/sh -e

export DESTDIR="$1"

# Remove 'libelf' dependency.
printf ",s/if have_libelf/if not have_libelf\nw\nq" |
    ed gio/meson.build >/dev/null

meson \
    --prefix=/usr \
    -Dman=false \
    -Dfam=false \
    . build

ninja -C build
ninja -C build install

# Purge gdbus.
rm -rf "$1/usr/bin/gdbus"
