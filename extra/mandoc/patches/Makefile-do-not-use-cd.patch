-	cd $(DESTDIR)$(BINDIR) && $(LN) mandoc $(BINM_WHATIS)
-	cd $(DESTDIR)$(SBINDIR) && \
-		$(LN) ${BIN_FROM_SBIN}/mandoc $(BINM_MAKEWHATIS)
+	$(LN) mandoc $(DESTDIR)$(BINDIR)/$(BINM_MAN)
+	$(LN) mandoc $(DESTDIR)$(BINDIR)/$(BINM_APROPOS)
+	$(LN) mandoc $(DESTDIR)$(BINDIR)/$(BINM_WHATIS)
+	$(LN) ${BIN_FROM_SBIN}/mandoc $(DESTDIR)$(SBINDIR)/$(BINM_MAKEWHATIS)
