#!/bin/sh -e

./configure \
    --prefix=/usr \
    --enable-vp8 \
    --enable-vp9 \
    --disable-tools \
    --disable-examples \
    --disable-docs \
    --enable-experimental \
    --enable-runtime-cpu-detect \
    --enable-shared \
    --enable-postproc \
    --enable-pic \
    --disable-install-docs \
    --disable-install-srcs \
    --disable-install-bins \
    --as=yasm

make
make DESTDIR="$1" install
